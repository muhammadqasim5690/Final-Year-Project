<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="25sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_signup"
        android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Name : "
        android:textSize="18sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_firstname"
        android:padding="10dp"
        android:layout_below="@id/txt_signup"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_firstname"
        android:layout_below="@id/txt_firstname"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Name : "
        android:textSize="18sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_lastname"
        android:padding="10dp"
        android:layout_below="@id/edit_firstname"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_lastname"
        android:layout_below="@id/txt_lastname"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number : "
        android:textSize="18sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_mobile"
        android:padding="10dp"
        android:layout_below="@id/edit_lastname"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_mobile"
        android:layout_below="@id/txt_mobile"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:textSize="18sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_password"
        android:padding="10dp"
        android:layout_below="@id/edit_mobile"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_password"
        android:layout_below="@id/txt_password"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Confirm Password : "
        android:textSize="18sp"
        android:textColor="@color/color_orange"
        android:id="@+id/txt_confirmpassword"
        android:padding="10dp"
        android:layout_below="@id/edit_password"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_confirmpassword"
        android:layout_below="@id/txt_confirmpassword"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Continue "
        android:textSize="20sp"
        android:textColor="@color/color_orange"
        android:id="@+id/btn_continue"
        android:padding="10dp"
        android:layout_below="@id/edit_confirmpassword"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/color_black"
        />
</RelativeLayout>